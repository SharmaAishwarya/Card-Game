<!DOCTYPE html>
<html>
<head>
  <title>Team1Selt2020</title>
</head>
<body>
<div class="container">
<% if flash[:notice] %>
  <div class="alert alert-danger">
      <%= flash[:notice] %>
  </div>
<% elsif flash[:warning] %>
  <div class="alert alert-warning">
      <%= flash[:warning] %>
  </div>
  <% elsif flash[:success] %>
    <div class="alert alert-success">
      <%= flash[:success] %>
    </div>
  <% end %>
  <section class="User-Tag mt-4">
      <% if @current_user %>
        <p class="alert alert-info">You are logged in as <%= @current_user.username%></p>
      <div class="row">
        <div class="col-lg-4">
        <%= button_to "Logout", destroy_user_session_path, :id => 'logout', method: :delete, class:'btn btn-danger'%>
    </div>
    <div class="col-lg-4">
      <a href="/rooms" id="logo"><h1>SELT 2020</h1></a>
    </div>
    <% end %>
    </div>
  </section>
</div>
<%= yield %>
<!-- Optional JavaScript; choose one of the two! -->

<!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
