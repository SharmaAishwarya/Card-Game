<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <link rel="stylesheet" href="login.css">
</head>
<body>
<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "Username" %>
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag "Log in" %>
  </p>
  <% end %>
  </body>
</html>