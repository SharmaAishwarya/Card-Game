<style>
  #draw, #discard, #btn-dest, #btn-play, #updateScore{
      box-shadow: 2px 2px 6px gray;
  }

  #btn-play:hover, #draw:hover, #updateScore:hover {
      background-color: white;
      color: #007bff;
  }
  #discard:hover{
      background-color: white;
      color: #343a40;
  }
  #btn-dest:hover{
      background-color: white;
      color: #dc3545;
  }
</style>
<script src="https://js.pusher.com/7.0/pusher.min.js"></script>
