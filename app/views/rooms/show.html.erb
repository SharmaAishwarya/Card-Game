<style>
  .btn{
      box-shadow: 2px 2px 6px gray;
  }

  .btn-danger:hover{
      background-color: white;
      color: #dc3545;
  }

  .btn-primary:hover{
      background-color: white;
      color: #007bff;
  }

  .btn-dark:hover{
      background-color: white;
      color: #343a40;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="mt-3">Welcome to the room <span class="font-weight-normal"><%="#{@room.name}"%></span></h2>
      <h4>Please share the following invitation token with your friends/family: <span class="font-weight-normal"><%="#{@room.invitation_token}"%></span></h4>
    </div>
  </div>
  <div class="row justify-content-lg-center">
    <%= button_to 'Destroy Room', room_del_path, method: :delete, class:'btn btn-danger p-2 m-2', id:'btn-dest' %>
    <%= button_to 'Reset Room', rooms_reset_path, class:'btn btn-danger p-2 m-2', id:'reset'%>
  </div>
<%=form_tag rooms_update_score_path :class => 'form' do %>
    <div class="row p-3">
      <div class="col-lg-6">
    <div class="input-group mb-3 mt-3">
  <%= text_field :user , 'score' , :id => 'score', class:'form-control' %>
  <%= submit_tag 'Update Score', :id => 'updateScore', class:'btn btn-primary ml-3' %>
<%end %>
  </div>
  </div>
<div class="col-lg-6">
<table class="table" id="users">
  <thead class="thead-dark">
  <tr>
    <th scope="col">Username</th>
    <th scope="col">Number of cards</th>
    <th scope="col">Score</th>
  </tr>
  </thead>
  <tbody>
  <% @num_cards.each do |user| %>
    <tr>
      <td id="username">
        <%= user[0] %>
      </td>
      <td id="numCards">
        <%= user[1] %>
      </td>
      <td :id="score">
        <%= user[2] %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
  </div>
  </div>
  <div class="row justify-content-lg-center">
      <%= button_to 'Draw' , user_draw_path, id: "draw", class:'btn btn-primary'%>
  </div>
<div class="container">
  <div class="row">
    <div class="col-lg-6">
  <div class="floatLeft">
<%= form_tag  rooms_play_card_path, :method => :post, :id => 'rooms_play_card_path' do%>
  <br>
  <% if !@hand.blank? %>
        <h3>Player Hand</h3>
    <table id="hand" class="table table-striped">
      <thead>
      <tr>
        <th>Card</th>
        <th>Select</th>
      </tr>
      </thead>
      <tbody>
      <% @hand.each do |card| %>
        <tr>
          <td>
            <% if card.rank == 'Ace' && card.suit == 'Diamond' %>
              <%= image_tag(src='AD1.png', width: '80', height: '122')%>
            <% else %>
              <%= image_tag(src=card.rank[0] + card.suit[0] + ".png", width: '80', height: '122') %>
            <% end %>
          </td>
          <td>
            <%=check_box_tag "played_cards[#{card.card_id}]",nil,nil, :id => "hand_#{card.card_id}"%>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
  <% else %>
    <h1 class="row justify-content-lg-center pb-3">
      No cards present in your hand
    </h1>
  <%end %>
      <div class="row justify-content-lg-center">
        <div class="col col-md-auto">
        <%= button_to 'Play' , rooms_play_card_path, class: 'btn btn-primary', id:'btn-play' %>
        </div>
        <div class="col col-md-auto">
          <%= link_to "Discard", discard_index_path, id: "discard", class:'btn btn-dark'%>
        </div>
      </div>
<% end %>
    </div>

<div class="col-lg-6">
  <div class="floatRight">
    <h3 class="mt-4">Your Played Cards</h3>
    <table id="played_cards" class="table table-striped">
      <thead>
      <tr>
        <th>Card</th>
      </tr>
      </thead>
      <tbody>
      <% @played_cards.each do |card| %>
        <tr>
          <td>
            <% if card.rank == 'Ace' && card.suit == 'Diamond' %>
              <%= image_tag(src='AD1.png', width: '80', height: '122')%>
            <% else %>
              <%= image_tag(src=card.rank[0] + card.suit[0] + ".png", width: '80', height: '122') %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
  </div>
</div>
</div>